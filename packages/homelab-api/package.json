{
  "name": "homelab-api",
  "version": "0.0.0",
  "type": "module",
  "license": "MIT",
  "description": "Effect-ts Bun HTTP Server / API definitions for homelab services",
  "repository": {
    "type": "git",
    "url": "<PLACEHOLDER>",
    "directory": "packages/homelab-api"
  },
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "exports": {
    ".": {
      "import": "./src/index.ts"
    }
  },
  "scripts": {
    "circular": "yarn madge --circular ./src/index.ts",
    "codegen": "build-utils prepare-v2",
    "lint": "eslint src",
    "typecheck": "tsc -b tsconfig.json",
    "test:watch": "vitest watch",
    "test": "vitest run",
    "coverage": "vitest --coverage"
  },
  "dependencies": {
    "@effect/cluster": "^0.56.x",
    "@effect/experimental": "^0.58.x",
    "@effect/platform": "^0.94.x",
    "@effect/platform-node": "^0.104.x",
    "@effect/rpc": "^0.73.x",
    "@effect/sql": "^0.49.x",
    "@effect/workflow": "^0.16.x",
    "effect": "^3.x",
    "homelab-data": "workspace:*"
  },
  "effect": {
    "generateExports": {
      "include": [
        "**/*.ts"
      ]
    },
    "generateIndex": {
      "include": [
        "**/*.ts"
      ]
    }
  },
  "devDependencies": {
    "@effect/vitest": "^0.27.x",
    "madge": "^8.x",
    "vitest": "^3.x"
  }
}
