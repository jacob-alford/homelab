{
  "name": "homelab-api",
  "version": "0.0.0",
  "type": "module",
  "license": "MIT",
  "description": "Effect-ts Bun HTTP Server / API definitions for homelab services",
  "repository": {
    "type": "git",
    "url": "<PLACEHOLDER>",
    "directory": "packages/homelab-api"
  },
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "exports": {
    ".": {
      "import": "./src/index.ts"
    }
  },
  "scripts": {
    "codegen": "build-utils prepare-v2",
    "build": "bun run build-esm && bun run build-annotate && bun run build-cjs && build-utils pack-v2",
    "build-esm": "tsc -b tsconfig.build.json",
    "build-cjs": "babel build/esm --plugins @babel/transform-export-namespace-from --plugins @babel/transform-modules-commonjs --out-dir build/cjs --source-maps",
    "build-annotate": "babel build/esm --plugins annotate-pure-calls --out-dir build/esm --source-maps",
    "check": "tsc -b tsconfig.json",
    "lint": "eslint src",
    "typecheck": "tsc -b tsconfig.json",
    "test": "vitest",
    "coverage": "vitest --coverage"
  },
  "dependencies": {
    "@effect/platform": "latest",
    "@effect/platform-bun": "latest",
    "effect": "latest"
  },
  "effect": {
    "generateExports": {
      "include": [
        "**/*.ts"
      ]
    },
    "generateIndex": {
      "include": [
        "**/*.ts"
      ]
    }
  }
}
